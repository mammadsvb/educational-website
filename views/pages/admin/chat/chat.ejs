<div class="container">
    <div class="row pt-5 justify-content-center">
        <div class="col-8">
            <div class="card card-default">
                <div class="card-header" style="display: flex;">
                    <h5>join to the forum</h5>
                </div>
                <div class="card-body">
                    <form action="/admin/chat/room" method="GET">
                        <input type="hidden" id="username" name="user" value="<%- req.user.username %>">

                        <div class="form-group mt-1">
                            <p class="alert alert-success">Select the forum</p>
                            <select id="room" name="room" class="form-control">
                                <option selected disabled>Select</option>
                                <option>Forum1</option>
                                <option>Forum2</option>
                                <option>Forum3</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Send</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('form').submit(function(e){
        if($('#room').val() == null) {
            alert('select your forum')
            return false;
        }

        return true;
    })
</script>