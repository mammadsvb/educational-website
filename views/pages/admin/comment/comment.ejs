


<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Comments</h1>
    <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below.
        For more information about DataTables, please visit the <a target="_blank"
            href="https://datatables.net">official DataTables documentation</a>.</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Comments</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Course</th>
                            <th>Comment</th>
                            <th>Setting</th>        
                        </tr>
                    </thead>

                    <tfoot>
                        <tr>
                            <th>User</th>
                            <th>Course</th>
                            <th>Comment</th>
                            <th>Setting</th>   
                        </tr>
                    </tfoot>

                    <tbody>

                        <% comments.forEach(comment => { %>

                            <tr>
                                <td><%= comment.user.username %></td>

                                <%if(comment.course){%>
                                    <td><%= comment.course.title %></td>
                                <%}else if(comment.article){%>
                                    <td><%= comment.article.title %></td>
                                <%}%>

                                <td><%= comment.comment %></td>
                                
                                <td>
                                    <form action="/admin/comment/<%= comment._id %>?_method=DELETE" method="POST">

                                        <button type="submit" class="btn btn-danger btn-circle ml-3 mr-3">
                                        <i class="fas fa-trash"></i></button>
                                                
                                    </form>

                                    <% if(!comment.check){%>
                                    <form action="/admin/comment/<%= comment._id %>?_method=PUT" method="POST">

                                        <button type="submit" class="btn btn-success btn-circle ml-3 mr-3">
                                            <i class="fas fa-check"></i>
                                        </button>
                                                
                                    </form>
                                    <%}%>
                                </td>
                            </tr>                        
                        
                        
                        <% }) %>

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>



