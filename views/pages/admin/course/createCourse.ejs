
<% if(massages.length) { %>
  <div class="alert alert-danger" role="alert">
      
      <% massages.forEach(msg=>{ %>
          
          <p><%= msg %></p>  
      
      <% }) %>
  </div>
<% } %>
      

<% if(success.length) { %>
  <div class="alert alert-success" role="alert">
          
      <% success.forEach(succ=>{ %>
              
          <p><%= succ %></p>  
          
      <% }) %>
  </div>

<% } %>


<div class="container">
  <h1>Create New Course</h1>
  
  <form action="/admin/course/create" method="post" enctype="multipart/form-data"  >
    <div class="mb-3">
      <label for="title">Title:</label>
      <input type="text" class="form-control" id="title" name="title" placeholder="Enter the title of your course">
    </div>
    
    <div class="mb-3">
      <label for="type">Type:</label>
      <select class="form-select form-select-sm" id="type" name="type" aria-label="Small select example">
        <option value="vip">VIP</option>
        <option value="cash">Cash</option>
        <option value="free" selected>Free</option>
      </select>

    </div>

    <div class="mb-3">
      <label for="categoreis">Category:</label>
      <select class="js-select2" id="categoreis" name="categoreis" multiple="multiple">
        <% categoreis.forEach(category=>{%>
          
          <option value="<%=category._id%>" ><%= category.name %></option>
   
        <%})%>
  
      </select>
    </div>

    

    <div class="mb-3">
      <label for="content">Content:</label>
      <textarea class="form-control" id="content" name="content" placeholder="Enter the content of your course"></textarea>
    </div>
    
    <div class="mb-3">
      <label for="image">Image:</label>
      <input type="file" class="form-control" id="image" name="image" accept="image/*">
    </div>

    <div class="mb-3">
      <div class="container  ">
        <div class="row row-cols-2">
          <div class="col ">
            
            <label for="price">Price:</label>
            <input type="text" class="form-control" id="price" name="price" placeholder="Price">
  
          </div>
          
          <div class="col">
            
            <label for="tags">Tages:</label>
            <input type="text" class="form-control" id="tags" name="tags" placeholder="tags">
  
          </div>
  
        </div>
      </div>
    </div>



    
    <button type="submit" class="btn btn-primary">Create Course</button>
  </form>
</div>

