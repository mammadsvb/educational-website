<% if(massages.length) { %>
  <div class="alert alert-danger" role="alert">
      
      <% massages.forEach(msg=>{ %>
          
          <p><%= msg %></p>  
      
      <% }) %>
  </div>
<% } %>


<div class="container">
  <h1>Edit Episdoe</h1>
  
  <form action="/admin/episode/<%= episode._id %>?_method=PUT" method="post"  >
    <div class="mb-4">
    
      <label for="number">Number:</label>
      <input type="text" class="form-control" id="number" name="number" value="<%= episode.number %>">
    


      <label for="title">Title:</label>
      <input type="text" class="form-control" id="title" name="title" value="<%= episode.title %>">
  
    </div>
    
    <div class="mb-4">
      <label for="type">Type:</label>
      <select class="form-select form-select-sm" id="type" name="type" aria-label="Small select example">
        <option value="vip"  <% if (episode.type === 'vip') { %> selected<% } %>>VIP</option>
        <option value="cash" <% if (episode.type === 'cash') { %> selected<% } %>>Cash</option>
        <option value="free" <% if (episode.type === 'free') { %> selected<% } %> selected>Free</option>
      </select>
    </div>

    <label for="course">Course:</label>
    <select class="form-select form-select-sm" id="course" name="course" aria-label="Small select example">
      <% courses.forEach(course => {%>
      
        <option value="<%= course._id %>" <% if (String(episode.course) === String(course._id)) { %> selected<% } %>><%= course.title %></option>
      
      <%})%>
    
    <div class="mb-4">
      <label for="content">Content:</label>
      <textarea class="form-control" id="content" name="content" ><%= episode.content %></textarea>
    </div>
    

    <div class="mb-4">
      <div class="container  ">
        <div class="row row-cols-2">
          <div class="col ">
            
            <label for="time">Time:</label>
            <input type="text" class="form-control" id="time" name="time" value="<%= episode.time %>">
  
          </div>
          
          <div class="col">
            
            <label for="videoUrl">Viedo URL:</label>
            <input type="text" class="form-control" id="videoUrl" name="videoUrl" value="<%= episode.videoUrl %>">
  
          </div>
  
        </div>
        <button type="submit" class="btn btn-primary mt-4">Edit Episdoe</button>
      </div>
    </div>



    
  </form>
</div>