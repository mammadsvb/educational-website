
<% if(massages.length) { %>
    <div class="alert alert-danger" role="alert">
        
        <% massages.forEach(msg=>{ %>
            
            <p><%= msg %></p>  
        
        <% }) %>
    </div>
  <% } %>
        
  
  <% if(success.length) { %>
    <div class="alert alert-success" role="alert">
            
        <% success.forEach(succ=>{ %>
                
            <p><%= succ %></p>  
            
        <% }) %>
    </div>
  
  <% } %>
  
  
  <div class="container">
    <h1>Create New Forum</h1>
    
    <form action="/admin/forum/create" method="POST"  >
      <div class="mb-3">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Enter the name of your forum">
      </div>
      
      <div class="mb-3">
        <label for="label">Label:</label>
        <input type="text" class="form-control" id="label" name="label" placeholder="Enter the label of your forum">
      </div>
  
      
      <button type="submit" class="btn btn-primary">Create Forum</button>
    </form>
  </div>