
<% if(massages.length) { %>
    <div class="alert alert-danger" role="alert">
        
        <% massages.forEach(msg=>{ %>
            
            <p><%= msg %></p>  
        
        <% }) %>
    </div>
  <% } %>
        
  
  <% if(success.length) { %>
    <div class="alert alert-success" role="alert">
            
        <% success.forEach(succ=>{ %>
                
            <p><%= succ %></p>  
            
        <% }) %>
    </div>
  
  <% } %>
  
  
  <div class="container">
    <h1>Create New Role</h1>
    
    <form action="/admin/role/create" method="POST"  >
      <div class="mb-3">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Enter the name of your role">
      </div>
      
      <div class="mb-3">
        <label for="label">Label:</label>
        <input type="text" class="form-control" id="label" name="label" placeholder="Enter the label of your role">
      </div>

      <div class="mb-3">
        <label for="permissions">Category:</label>
        <select class="js-select2" id="permissions" name="permissions" multiple="multiple">
          <% permissions.forEach(permission=>{%>
            
            <option value="<%=permission._id%>" ><%= permission.name %></option>
     
          <%})%>
    
        </select>
      </div>
  
      
      <button type="submit" class="btn btn-primary">Create Role</button>
    </form>
  </div>